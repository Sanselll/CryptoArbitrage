{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "Environment": {
    "IsLive": true
  },
  "DataCollection": {
    "Binance": {
      "MaxConcurrentRequests": 1,
      "RateLimitDelayMs": 100
    },
    "Bybit": {
      "MaxConcurrentRequests": 1,
      "RateLimitDelayMs": 100
    }
  },
  "Arbitrage": {
    "MinSpreadPercentage": 0.1,
    "MinPriceSpreadPercentage": 0.3,
    "MinVolume24hUsd": 500000,
    "MaxBidAskSpreadPercent": 0.5,
    "MinOrderbookDepthUsd": 25000,
    "MinDailyVolumeUsd": 100000,
    "MaxSymbolCount": 200,
    "AutoDiscoverSymbols": true,
    "Exchanges": [
      {
        "Name": "Binance",
        "IsEnabled": true
      },
      {
        "Name": "Bybit",
        "IsEnabled": true
      }
    ]
  }
}
